<h1 class="text-center mt-4">Categories</h1>
<div class= "flickr_pagination d-flex justify-content-center">
    <%= will_paginate @categories %>
</div>
<div class="container">
    <% @categories.each do |category|  %>
        <div class="row justify-content-md-center">
            <div class="col-5 mt-4">
                <div class="card text-center shadow p-1 mb-5 bg-white rounded">
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success fw-bolder", style:"text-decoration: none" %></h5>
                        <h5 class="card-title"><%= pluralize(category.articles.count, "article") %></h5>
                    </div>
                    <div class="card-footer text-body-secondary">
                        <small>Created <%=time_ago_in_words(category.created_at)%> ago,
                            Edited <%=time_ago_in_words(category.updated_at)%> ago
                        </small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
<div class= "flickr_pagination d-flex justify-content-center">
    <%= will_paginate @categories %>
</div>