<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article%>  
      <%= form_with( model: @article, class: "shadow p-3 mb-2 bg-info rounded",local: true ) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :title, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow p-2 mb-2 bg-body-tertiary rounded", placeholder: "Title for article" %>
          </div>
        </div>
        <div class="form-group row">
            <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows:10, class: "form-control shadow p-2 mb-2 bg-body-tertiary rounded", placeholder: "Description for article" %>
          </div>
        </div>
        <div class="form-group row">
            <%= f.label :categories, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.collection_select( :category_ids, Category.all, :id, :name, { prompt: "Make your selection from the list below (can be empty)" }, { multiple: true, size: 5, class: "form-select shadow p-2 mb-2 bg-body-tertiary rounded" } ) %>
          </div>
        </div>
        <div class="form-group d-flex justify-content-center">
            <%= f.submit class: "btn btn-outline-light" %>
        </div>
        <% end%>
    </div>
    <div class="mb-3">
      <%= link_to '[Back to articles list]', articles_path, class: "d-flex justify-content-center text-info" %>
    </div>
  </div>
</div>