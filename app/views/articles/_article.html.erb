<div class="container">
    <% @articles.each do |article|  %>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow p-1 mb-5 bg-white rounded">
                    <div class="card-header fst-italic">
                        by <%= link_to article.user.username, user_path(article.user) if article.user %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%=link_to article.title, article_path(article), class: "text-success fw-bolder", style:"text-decoration: none" %></h5>
                        <p class="card-text"><%= truncate(article.description, length: 100)  %></p>
                        <%= link_to 'Show', article_path(article), class: "btn btn-outline-success"%>
                        <% if logged_in? && article.user == current_user %>
                        <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-warning" %>
                        <%= link_to 'Delete', article_path(article), data: { turbo_confirm: "Are you sure?",turbo_method: :delete }, class: "btn btn-outline-danger" %>
                        <% end %>
                    </div>
                    <div class="card-footer text-body-secondary">
                        <small>Created <%=time_ago_in_words(article.created_at)%> ago,
                            Edited <%=time_ago_in_words(article.updated_at)%> ago
                        </small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
