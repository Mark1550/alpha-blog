<h1 class="text-center mt-4"><%= "#{@user.username}'s profile" %></h1>
<%= gravatar_for @user, size: 200%>
<div class="text-center mt-4">
    <% if logged_in? && @user == current_user %>
        <%= link_to 'Edit Your Profile', edit_user_path(@user), class: "btn btn-outline-success"%>
    <% end %>
</div>

<h3 class="text-center mt-4">Articles</h3>
<div class= "flickr_pagination d-flex justify-content-center">
    <%= will_paginate @articles%>
</div>
<%= render 'articles/article' %>
<div class= "flickr_pagination d-flex justify-content-center mb-3">
    <%= will_paginate @articles%>
</div>

